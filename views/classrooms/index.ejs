<h1>classrooms index</h1>
<h2>My Classrooms:</h2>
<div class="container">
    <% classList.forEach(classroom => { %>
        
     <div>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><a href = "/classrooms/<%- classroom.id %> "><%- classroom.class_name %></a></h5>
              <h6 class="card-subtitle mb-2 text-muted">class sub-text</h6>
              <p class="card-text"> some info about the class </p>
              <form method="POST" action="/classrooms/remove-classroom?_method=DELETE">
                <input type="hidden" value="<%- classroom.id%>" name="thisClassroom">
               <button type="submit" class="btn btn-danger">delete classroom</button>
            </form>
            </div>
          </div>
     </div>
     
    <% }) %>
    
</div>
<div class="container">
    <!-- form to add class inline -->
    <form action="/classrooms/newclassroom" method="post">
        <input type="text" name="classroom_name" class="form-control" >
        <button type="submit">add new classroom</button>
    </form>

</div>