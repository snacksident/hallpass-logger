<h1>hit the show classrooms route</h1>
<h2>viewing info about  </h2>


 <h3>
     <%- currentClassroom.class_name %> 
 </h3>
 <h4>list of students that have been added to this classroom:</h4>
<ul>
    <% studentsInClass.forEach(student => { %>
     <li>
         <a href="/students/<%-student.id%>">
             <%- student.last_name %>, <%- student.first_name %> 
         </a>

         <form action="/classrooms/remove-student?_method=DELETE" method="POST">
             <label for="remove-student"></label>

             <input type="hidden" value="<%= student.id %>" name="currentStudent">

             <input type="hidden" value="<%= currentClassroom.id %>" name="thisClassroom">
             
            
             <button type="submit" name="currentStudent">remove student from class</button>
         </form>
         <!-- need another form with button to start/stop hallpass logging -->
         <form>

            <% // if student is not currently on hallpass, allow timer start %>
             
            <% // else, only allow timer stop and log time %>
             <button type="submit">hallpass</button>

         </form>
     </li>
    <% }) %>
</ul>