<h1>My Classrooms</h1>
<h2>viewing   <%- currentClassroom.class_name %> </h2>

 <h4>roster for <%- currentClassroom.class_name %> :</h4>
<ul>
    <% studentsInClass.forEach(student => { %>
     <li>
         <a href="/students/<%-student.id%>">
             <%- student.last_name %>, <%- student.first_name %> 
         </a>
         <form action="/classrooms/remove-student?_method=DELETE" method="POST" id="student-delete">
             <label for="remove-student"></label>
             <input type="hidden" value="<%= student.id %>" name="currentStudent">
             <input type="hidden" value="<%= currentClassroom.id %>" name="thisClassroom">
             
            
             <button type="submit" name="currentStudent" form="student-delete">remove student from class</button>
         </form>
         <!-- need another form with button to start/stop hallpass logging -->
         <% // if student is not currently on hallpass, allow timer start %>
         
         <% if (!student.has_pass) { %>
            <form action="/classrooms/hallpass-checkout" method="POST" id="hallpass-checkout">
                <input type="hidden" value="<%= student.id %>" name="currentStudent">
                <input type="hidden" value="<%= currentClassroom.id %>" name="thisClassroom">
                 <button type="submit">hallpass checkout</button>
             </form>
         <% } else {%>
            <form action="/classrooms/hallpass-checkin?_method=PUT" method="PUT" id="hallpass-checkin">
                <input type="hidden" value="<%= student.id %>" name="currentStudent">
                <input type="hidden" value="<%= currentClassroom.id %>" name="thisClassroom">
                 <button type="submit" >hallpass checkin</button>
    
             </form>
        <% } %>
         
     </li>
    <% }) %>
</ul>